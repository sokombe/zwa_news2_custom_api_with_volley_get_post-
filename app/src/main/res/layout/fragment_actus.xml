<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    >


    <ViewFlipper
        android:id="@+id/flipper"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_gravity="center" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Image_cat_tout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/general"

                        android:paddingBottom="6dp" />

                    <TextView
                        android:id="@+id/Text_cat_tout"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_centerInParent="true"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="Tout"

                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Image_cat_Affaire"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/busness"

                        android:paddingBottom="6dp" />

                    <TextView
                        android:id="@+id/Text_cat_affaire"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_centerInParent="true"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="Busness"

                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Image_cat_Divers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/entertainement"

                        android:paddingBottom="6dp" />

                    <TextView
                        android:id="@+id/Text_cat_Divers"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_centerInParent="true"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="Loisir"

                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Image_cat_Sante"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/health"

                        android:paddingBottom="6dp" />

                    <TextView
                        android:id="@+id/Text_cat_Sante"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_centerInParent="true"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="SantÃ©"

                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Image_cat_Science"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/science"

                        android:paddingBottom="6dp" />

                    <TextView
                        android:id="@+id/Text_cat_Sciene"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_centerInParent="true"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="Science"

                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Image_cat_Sport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/sport"

                        android:paddingBottom="6dp" />

                    <TextView
                        android:id="@+id/Text_cat_Sport"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_centerInParent="true"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="Sport"

                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Image_cat_Techno"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/technology"

                        android:paddingBottom="6dp" />

                    <TextView
                        android:id="@+id/Text_cat_Technon"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_centerInParent="true"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="Techno"

                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Recycler_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>